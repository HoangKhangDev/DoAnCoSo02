<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:mode="same_level"
    app:dragEdge="right"
    android:id="@+id/swipelayout_item_thongtin_hoadon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete"
            android:id="@+id/img_delete_item_thongtinhhoadon"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:background="@color/backgroundColorItem5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginRight="4dp"
                android:layout_height="match_parent"
                android:text="Tên Sách"
                android:inputType="textImeMultiLine"
                android:gravity="center"
                android:textColor="@color/TextColor"
                android:textSize="14sp"
                android:id="@+id/tv_tensach_item_taohoadon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="1dp"
            android:background="@color/backgroundColorItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:weightSum="5">
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Giá Bán"
                android:inputType="number"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginRight="4dp"
                android:textSize="14sp"
                android:id="@+id/tv_giaban_item_taohoadon"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="100"
                android:gravity="center"
                android:textColor="@color/backgroundColorItem5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tv_soluong_item_taohoadon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                    android:id="@+id/img_up_item_taohoadon"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:id="@+id/img_dow_item_taohoadon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>