<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipelayout_item_cohinh"
    app:mode="same_level"
    app:dragEdge="left"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
        <TextView
            android:backgroundTint="#A6401F"
            android:id="@+id/tv_delete_item_cohinh"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:background="@drawable/shape_50dp"
            android:text="D\ne\nl\ne\nt\ne"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_cohinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:weightSum="10"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_tieude_item_cohinh_listview_hienthi"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:text="Phụ Nữ Thông Minh Không Ở Góc Văn Phòng"
                    android:textStyle="bold"
                    android:textColor="#2196F3"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luis Mana co to"
                    android:id="@+id/tv_mota_item_cohinh_listview_hienthi"/>


            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                app:civ_border_width="1dp"
                app:civ_border_color="#90FDFAFA"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_pictures"
                android:id="@+id/image_item_cohinh_list_hienthi"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</com.chauthai.swipereveallayout.SwipeRevealLayout>