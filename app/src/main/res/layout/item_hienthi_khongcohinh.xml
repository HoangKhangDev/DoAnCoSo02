<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:id="@+id/swipelayout_item_khongcohinh"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/tv_edit_item_khongcohinh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tv_delete_item_khongcohinh"
                android:src="@drawable/delete"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearlayout_item_khongcohinh"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:text="Không có gì quý hơn độc lập tự do"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_item_khongcohinh_hienthi"/>
                <TextView
                    android:layout_weight="2"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaaaa"
                    android:textStyle="italic"
                    android:textColor="#009688"
                    android:id="@+id/tv_item_mota1_khongcohinh_hienthi"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaa"
                    android:textStyle="normal"
                    android:id="@+id/tv_item_mota2_khongcohinh_hienthi"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>