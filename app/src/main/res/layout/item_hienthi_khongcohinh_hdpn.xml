<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/swipelayout_item_khongcohinh_hdpn"
    app:mode="same_level"
    app:dragEdge="left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/tv_edit_item_khongcohinh_hdpn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:src="@drawable/edit"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_khongcohinh_hdpn"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/bootstrap_dropdown_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/receipt"
                android:padding="10dp"/>
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/bootstrap_dropdown_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        app:bootstrapText="Không có gì quý hơn độc lập tự do"
                        android:maxLines="1"
                        app:roundedCorners="false"
                        app:bootstrapBrand="warning"
                        android:id="@+id/tv_item_khongcohinh_hienthi_hdpn"/>
                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:maxLines="1"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="regular"
                        app:bootstrapText="thành tiền"
                        android:id="@+id/tv_item_mota1_khongcohinh_hienthi_hdpn"/>
                    <com.beardedhen.androidbootstrap.BootstrapLabel
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        app:bootstrapText="Ngày"
                        android:maxLines="1"
                        app:roundedCorners="false"
                        app:bootstrapBrand="secondary"
                        android:id="@+id/tv_item_mota2_khongcohinh_hienthi_hdpn"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>