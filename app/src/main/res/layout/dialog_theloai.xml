<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_30"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:backgroundTint="#19B1ADAD"
        android:background="@drawable/radius_40"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="THÊM LOẠI SÁCH"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:padding="10dp"/>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Loại Sách"
                android:textSize="16sp"
                android:labelFor="@+id/edt_tenloaisach_theloai"
                android:textStyle="italic"/>
            <EditText
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_tenloaisach_theloai"
                android:backgroundTint="@color/white"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="10"
           >
           <Button
               android:layout_weight="4"
               android:background="@drawable/radius_30"
               android:backgroundTint="#6BFD0404"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btn_them_theloai"
               android:text="Thêm"
               android:textColor="@color/white"
               android:layout_gravity="center"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"/>
           <Button
               android:layout_gravity="right"
               android:layout_weight="4"
               android:background="@drawable/radius_30"
               android:backgroundTint="#6BFD0404"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btn_huy_theloai"
               android:text="Huỷ"
               android:textColor="@color/white"/>
       </LinearLayout>
    </LinearLayout>

</LinearLayout>