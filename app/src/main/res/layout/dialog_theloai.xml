<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/bootstrap_gray_lighter"
        android:orientation="vertical"
        android:padding="20dp">

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            app:bootstrapBrand="primary"
            app:bootstrapHeading="h4"
            app:bootstrapText="Thêm Loại Sách"
            app:roundedCorners="false" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edt_tenloaisach_theloai"
            android:textSize="16sp"
            android:textStyle="italic"
            app:bootstrapText="Tên loại sách" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edt_tenloaisach_theloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:bootstrapBrand="secondary"
            app:bootstrapSize="lg"
            app:roundedCorners="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_them_theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/radius_30"
                android:backgroundTint="#6BFD0404"
                android:text="Thêm"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/btn_huy_theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="4"
                android:background="@drawable/radius_30"
                android:backgroundTint="#6BFD0404"
                android:text="Huỷ"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>